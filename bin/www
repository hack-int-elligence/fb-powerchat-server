#!/usr/bin/env node

/**
 * Module dependencies.
 */

var app = require('../app');
var debug = require('debug')('fbmessenger:server');
var http = require('http');
var ss = require('socket.io-stream');


/**
 * Get port from environment and store in Express.
 */

var port = normalizePort(process.env.PORT || '3000');
app.set('port', port);

/**
 * Create HTTP server.
 */

var server = http.createServer(app);

/**
 * Listen on provided port, on all network interfaces.
 */

server.listen(port);
server.on('error', onError);
server.on('listening', onListening);

// Socketio components
var io = require('socket.io')(server);

io.on('connection', function(client) {
    console.log("New client");

    client.on('change', function(data) {
        console.log(data);
        room = data['room'];
        var canvas_json = data.canvas_json;
        client.broadcast.to(room).emit('draw', {'data': canvas_json});
    });

    client.on('join', function(data) {
        console.log(data);
        room = data['room'];
        client.join(room);
        client.broadcast.to(room).emit('join', {'data': room});
    });

    client.on('leave', function(data) {
        room = data['room'];
        client.leave(room);
        client.broadcast.to(room).emit('leave', {'data': room});
    });
});

io.of('/stream').on('connection', function(client) {
    console.log('Client connected to stream.');
    ss(client).on('file', function(stream, data) {
        console.log(stream);
        console.log(data);
        global[data.file] = stream;
        console.log(global);
        var livestream = ss.createStream();
        client.emit('livestream', {'data': data});
    });
});


/**
 * Normalize a port into a number, string, or false.
 */

function normalizePort(val) {
  var port = parseInt(val, 10);

  if (isNaN(port)) {
    // named pipe
    return val;
  }

  if (port >= 0) {
    // port number
    return port;
  }

  return false;
}

/**
 * Event listener for HTTP server "error" event.
 */

function onError(error) {
  if (error.syscall !== 'listen') {
    throw error;
  }

  var bind = typeof port === 'string'
    ? 'Pipe ' + port
    : 'Port ' + port;

  // handle specific listen errors with friendly messages
  switch (error.code) {
    case 'EACCES':
      console.error(bind + ' requires elevated privileges');
      process.exit(1);
      break;
    case 'EADDRINUSE':
      console.error(bind + ' is already in use');
      process.exit(1);
      break;
    default:
      throw error;
  }
}

/**
 * Event listener for HTTP server "listening" event.
 */

function onListening() {
  var addr = server.address();
  var bind = typeof addr === 'string'
    ? 'pipe ' + addr
    : 'port ' + addr.port;
  debug('Listening on ' + bind);
}
